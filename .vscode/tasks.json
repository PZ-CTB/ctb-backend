{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install python modules",
            "type": "shell",
            "isBackground": false,
            "command": "python",
            "args": [
                "-m", "pip", "install", "--user", "--upgrade",
                "-r", "${workspaceFolder}/requirements.txt",
                "-r", "${workspaceFolder}/src/server/requirements.txt"
            ],
            "windows": {
                "command": "python.exe"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "promptOnClose": true,
        }
    ]
}
