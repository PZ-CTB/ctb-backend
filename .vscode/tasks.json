{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install python modules",
            "type": "shell",
            "isBackground": false,
            "command": "python",
            "args": [
                "-m", "pip", "install", "--user", "--upgrade", "-r",
                "${workspaceFolder}/requirements.txt"
            ],
            "windows": {
                "command": "python.exe",
            },
            "presentation": {
                "reveal": "silent",
            },
            "runOptions": {
                "runOn": "folderOpen",
            }
        }
    ]
}
